<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="vertical"
    android:background="@color/antiqueWhite"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/prize_issue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/expect" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <TextView
            android:id="@+id/prize_number_1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/circle_red"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:text="7"/>
        <TextView
            android:id="@+id/prize_number_2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/circle_red"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:text="7"/>
        <TextView
            android:id="@+id/prize_number_3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/circle_red"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:text="7"/>
        <TextView
            android:id="@+id/prize_number_4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/circle_red"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:text="7"/>
        <TextView
            android:id="@+id/prize_number_5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/circle_red"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:text="7"/>
        <TextView
            android:id="@+id/prize_number_6"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/circle_red"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:text="7"/>
        <TextView
            android:id="@+id/prize_number_7"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/circle_red"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:text="7"/>
    </LinearLayout>

    <TextView
        android:id="@+id/prize_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="2017.3.24æ—¥"/>
</RelativeLayout>